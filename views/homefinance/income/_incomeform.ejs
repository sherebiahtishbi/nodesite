<div class="form-row">
    <div class="form-group st-space-right">
        <label for="month">Month</label>
        <select name="month" id="ddMonth" class="form-control">
            <% months.forEach(month=> {%>
                <% if (month.monthno==income.incomemonth) { %>
                    <option value="<%=month.monthno%>" selected>
                        <%=month.monthname%>
                    </option>
                    <% } else { %>
                        <option value="<%=month.monthno%>">
                            <%=month.monthname%>
                        </option>
                        <% } %>
                            <% }) %>
        </select>
    </div>
    <div class="form-group st-space-right">
        <label for="year">Year</label>
        <select name="year" id="ddYear" class="form-control">
            <% years.forEach(year=>{%>
                <% if (year==income.incomeyear) { %>
                    <option value="<%=year%>" selected>
                        <%=year%>
                    </option>
                    <%} else { %>
                        <option value="<%=year%>">
                            <%=year%>
                        </option>
                        <%}%>
                            <%})%>
        </select>
    </div>
    <div class="form-group st-space-right">
        <label for="amount">Amount</label>
        <input type="text" name="amount" class="form-control" placeholder="Amount" value="<%=income.amount%>">
    </div>
    <div class="form-group st-space-right">
        <label for="incometype">Income Type</label>
        <select name="incometype" id="ddYear" class="form-control">
            <% incometypes.forEach(incometype=>{%>
                <% if (income.incometype==incometype.id) { %>
                    <option value="<%=incometype.id%>" selected>
                        <%=incometype.categoryName%>
                    </option>
                    <%} else { %>
                        <option value="<%=incometype.id%>">
                            <%=incometype.categoryName%>
                        </option>
                        <%}%>
                            <%})%>
        </select>
    </div>
</div>
<div class="form-group">
    <label for="comments">Comments</label>
    <textarea type="text" name="comments" class="form-control" rows="5"
        placeholder="Additional details"><%=income.comments%></textarea>
</div>
<div>
    <button type="submit" class="btn st-btn-primary">Save</button>
    &nbsp;&nbsp;
    <a href="/finance/billpay" role="button" class="btn st-btn-primary"><i class="fas fa-cancel"></i>&nbsp;Cancel</a>
</div>