        <div class="row st-table st-billpay-topbar">
            <div class="st-data-filter form-inline">
                <div class="form-group">
                    <label for="datafilter">Choose year</label>&nbsp;
                    <select name="datafilter" id="ddfilter" class="form-control">
                        <% years.forEach(year=>{%>
                            <% if (year==selectedyear) { %>
                                <option selected>
                                    <%= (year==new Date().getFullYear()) ? 'Current' : year %>
                                </option>
                                <%} else {%>
                                    <option>
                                        <%= (year==new Date().getFullYear()) ? 'Current' : year %>
                                    </option>
                                    <%}%>
                                        <% }) %>
